<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        <link href="{{ asset('styles/generalStyle.css') }}" rel="stylesheet">
        {% block stylesheets %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
        <script src="{{ asset('scripts/mainScript.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </head>
    <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">Shopping_Demo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product') }}">Products</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="BannerAlert" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="{{ path('app_user_index') }}">Users Manager</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_product_manage') }}">Product Manager</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="nav-item">
                                    <a class="nav-link" href="http://localhost/phpmyadmin" target="_blank">PHP My Admin</a>
                                </li>
                            </ul>
                        </li>
                    {% endif %}

                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <form action="{{ path('app_logout') }}">
                        <button class="btn btn-outline-danger" type="submit">Deconnexion</button>
                    </form>
                    <form action="{{ path('app_user_show', {'id' : app.user.id}) }}">
                        <button class="btn btn-outline-success btn-account" type="submit">{{ app.user.username }}</button>
                    </form>
                {% else %}
                    <form action="{{ path('app_login') }}">
                        <button class="btn btn-outline-danger" type="submit">Connexion</button>
                    </form>
                    <form action="{{ path('app_register') }}">
                        <button class="btn btn-outline-danger btn-account" type="submit">Inscription</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </nav>
        {% block body %}{% endblock %}
    </body>
</html>
